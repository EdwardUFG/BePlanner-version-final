<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1B0B4"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            style="@style/HomeCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" 
            android:text="Próximo Recordatorio" />

        <androidx.cardview.widget.CardView
            style="@style/HomeCardView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/home_recordatorio_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sin recordatorios próximos"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/home_recordatorio_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Sonará: 08/11/2025 22:17" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/HomeCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF" 
            android:text="Próxima Tarea" />

        <androidx.cardview.widget.CardView
            style="@style/HomeCardView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/home_tarea_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay tareas pendientes"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/home_tarea_prioridad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Prioridad: Alta" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/HomeCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FFFFFF" 
            android:text="Última Nota" />

        <androidx.cardview.widget.CardView
            style="@style/HomeCardView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/home_nota_titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No hay notas recientes"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/home_nota_cuerpo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="Este es un extracto del cuerpo de la nota para tener una idea..." />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
