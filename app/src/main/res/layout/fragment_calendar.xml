<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1B0B4"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8B454F"
            android:text="◀"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/month_year_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:textColor="#140101"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Noviembre 2025" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8B454F"
            android:text="▶"
            android:textColor="#FAEFEF" />
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="7">
        <TextView android:text="DO" style="@style/CalendarDayHeader"/>
        <TextView android:text="LU" style="@style/CalendarDayHeader"/>
        <TextView android:text="MA" style="@style/CalendarDayHeader"/>
        <TextView android:text="MI" style="@style/CalendarDayHeader"/>
        <TextView android:text="JU" style="@style/CalendarDayHeader"/>
        <TextView android:text="VI" style="@style/CalendarDayHeader"/>
        <TextView android:text="SA" style="@style/CalendarDayHeader"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:columnCount="7"
        android:rowCount="6" />

    <TextView
        android:id="@+id/recordatorios_del_dia_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Recordatorios del día"
        android:textColor="#140101"
        android:textSize="16sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_recordatorios_dia"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_recordatorio_simple" />

    <TextView
        android:id="@+id/texto_sin_recordatorios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No hay recordatorios para este día."
        android:textColor="#55140101"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>
